# LLM R&D Platform Environment Configuration

# =============================================================================
# API KEYS - Required for commercial model access
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://llm_user:llm_password@localhost:5432/llm_platform
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here
FLASK_SECRET_KEY=your-flask-secret-key-for-sessions

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=true
API_PORT=5000
FRONTEND_PORT=3000

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=INFO
ENABLE_MONITORING=true
METRICS_RETENTION_DAYS=30
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# =============================================================================
# FILE UPLOAD LIMITS
# =============================================================================
MAX_UPLOAD_SIZE_MB=100
ALLOWED_EXTENSIONS=jsonl,csv,txt,json

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
DEFAULT_MODEL=gpt-3.5-turbo
MAX_TOKENS_DEFAULT=1000
TEMPERATURE_DEFAULT=0.7

# =============================================================================
# FINE-TUNING CONFIGURATION
# =============================================================================
MAX_CONCURRENT_TRAINING_JOBS=5
TRAINING_DATA_RETENTION_DAYS=90
MODEL_STORAGE_PATH=/app/models

# =============================================================================
# COST TRACKING
# =============================================================================
COST_ALERT_THRESHOLD_USD=100
DAILY_BUDGET_LIMIT_USD=500
ENABLE_COST_ALERTS=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
REDIS_CONNECTION_POOL_SIZE=10
WORKER_PROCESSES=4

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
WEBHOOK_URL=https://your-webhook-endpoint.com/notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
SKIP_AUTH_IN_TESTING=false
MOCK_EXTERNAL_APIS=false
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# PRODUCTION SETTINGS (uncomment for production)
# =============================================================================
# FLASK_ENV=production
# FLASK_DEBUG=false
# SSL_REQUIRED=true
# SECURE_COOKIES=true
# SESSION_COOKIE_SECURE=true
# SESSION_COOKIE_HTTPONLY=true